@page
@model HyperBPOWorkingMonitoring.Pages.ScheduleModel
@{
}
<script src="~/js/schedule.js" asp-append-version="true"></script>
<script src="~/js/Sortable.min.js" asp-append-version="true"></script>

<div class="container">
    <div class="row schedule-head">
        <div class="col-6">
            Schedule setting
        </div>
        <div class="col-6">
            Step Schedule setting
        </div>
    </div>
    <div class="row schedule-form">
        <div class="col col-6 border-right">
            <div class="">
                <div class="mb-3 row">
                    <input id="idschedule" hidden="hidden" />
                    <label for="txtName" class="col-sm-2 col-form-label">Schedule</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtName">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="ddlTeam" class="col-sm-2 col-form-label">Team</label>
                    <div class="col-sm-10">
                        <select class="form-select" id="ddlTeam">
                            <option value="1">Klavis-Num</option>
                            <option value="2">Klavis-Char</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3 row">
                    <button class="btn btn-success col-6 btn-schedule-new" onclick="SaveSchedule(1)">+New</button>
                    <button class="btn btn-warning col-6 btn-schedule-update" onclick="SaveSchedule(2)">Update</button>
                </div>
            </div>
            
        </div>
        <div class="col col-6">
            <div class="">
                
                <div class="mb-3 row">
                    <label for="ddlStep" class="col-sm-2 col-form-label">Step</label>
                    <div class="col-sm-10">
                        <select class="form-select" id="ddlStep">
                            
                        </select>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="txtPercent" class="col-sm-2 col-form-label">Percent</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtPercent">
                    </div>
                </div>
                <div class="mb-3 row">
                    <button class="btn btn-success col-6 btn-schedule-new" onclick="SaveStepSchedule(1)">+New</button>
                    <button class="btn btn-warning col-6 btn-schedule-update" onclick="SaveStepSchedule(2)">Update</button>
                </div>
            </div>

        </div>

    </div>
    <div class="row schedule-list-item">
        <div class="col col-6 border-right">
            <div class="list-group list-schedule">
                <div class="list-group-item list-group-item-action disabled">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Schedule Item</h5>
                    </div>
                </div>
                
            </div>
        </div>
        <div class="col col-6">
            <div class="list-group list-step" id="stepList">
                <div class="list-group-item list-group-item-action disabled">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Step Item</h5>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        InitSchedulePage();
    });

</script>